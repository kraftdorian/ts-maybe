{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es5"
    ],
    "module": "esnext",
    "rootDir": "src",
    "moduleResolution": "node",
    "baseUrl": "src",
    "types": [
      "jest"
    ],
    "allowJs": false,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
  }
}
